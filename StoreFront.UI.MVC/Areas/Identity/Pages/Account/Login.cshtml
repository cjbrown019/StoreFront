@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row mb-5">
    <div class="offset-md-3 offset-sm-2 col-md-4 col-sm-3 bg-secondary border border-3 border-primary p-4 mt-3">
        <section>
            <form id="account" method="post" class="form-floating">
                <h1 class="text-light">@ViewData["Title"]</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                    <label for="Input.Email" class="">Email</label>
                    <span asp-validation-for="Input.Email" class="text-light border-bottom border-danger border-3"></span>
                </div>

                <div class="form-floating mt-2">
                    <input asp-for="Input.Password" id="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password"/>
                    <label for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-light border-bottom border-danger border-3"></span>
                </div>

                @*<div class="form-floating mb-3">

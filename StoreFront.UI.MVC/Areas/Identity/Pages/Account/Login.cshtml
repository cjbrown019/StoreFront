                        <ul class="dropdown-menu text-center text-decoration-none">
                            <li><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></li>
                            <li><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></li>
